{
  "name": "amw_e2e",
  "version": "1.0.0",
  "description": "End to end tests for AMW Liima",
  "scripts": {
    "start": "npm run docker:start",
    "stop": "npm run docker:stop",
    "prepare": "npm start & wait-on http://admin:admin@127.0.0.1:8080/AMW_angular",
    "test": "npm run prepare && playwright test",
    "test:ui": "npm run prepare && playwright test --ui",
    "test:ci": "npm run prepare && playwright test --headed",
    "docker:build": "cd ./../ && mvn clean install -DskipTests && ./AMW_docker/build.sh && cd ./AMW_e2e",
    "docker:start": "docker compose -f ./../AMW_docker/docker-compose/docker-compose.yml up -d",
    "docker:stop": "docker compose -f ./../AMW_docker/docker-compose/docker-compose.yml down"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@types/node": "^22.10.5",
    "wait-on": "^7.2.0"
  }
}
